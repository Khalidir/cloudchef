<div class="container">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <div class="form-booking">
      <h3>C your booking</h3>
      <%= simple_form_for [@meal, @booking], url: meal_bookings_path do |f| %>
        <%= f.input :date %>
        <%= f.input :time %>
        <%= f.input :servings %>
        <%= f.submit "Submit", class: "btn btn-outline-dark" %>
      <% end %>
      <%= link_to "Back to meals", meals_path, class: "btn btn-outline-dark" %>
      </div>
    </div>
  </div>
</div>

