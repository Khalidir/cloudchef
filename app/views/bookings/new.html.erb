<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-3">
      <h3>Edit your meal</h3>
      <%= simple_form_for(@meal) do |f| %>
        <%= f.input :date %>
        <%= f.input :time %>
        <%= f.input :servings %>
        <%= f.submit "Submit", class: "btn btn-outline-dark" %> <%= link_to "Back to meals", meals_path, class: "btn btn-outline-dark" %>
      <% end %>
    </div>
  </div>
</div>
